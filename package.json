{
  "name": "redux-universal",
  "version": "0.0.2",
  "description": "A replacement for Redux's built-in middleware store enhancer to build universal apps.",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "npm run clean && babel src --out-dir lib",
    "test": "mocha test --recursive --require ./test/testHelper.js --compilers js:babel/register",
    "test:watch": "npm run test -- --watch",
    "test:cov": "babel-node ./node_modules/.bin/isparta cover --report=html _mocha -- --recursive --require ./test/testHelper.js --compilers js:babel/register",
    "test:cov:open": "npm run test:cov && open ./coverage/index.html",
    "lint": "npm run lint:eslint && npm run lint:jscs && npm run lint:flow",
    "lint:flow": "flow",
    "lint:eslint": "eslint ./",
    "lint:jscs": "jscs ./",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/reducks/redux-universal.git"
  },
  "keywords": [
    "react",
    "redux",
    "universal",
    "isomorphic"
  ],
  "authors": [
    "Sebastian Siemssen <fubhy@fubhy.com>",
    "Nik Graf <nik@nikgraf.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reducks/redux-universal/issues"
  },
  "homepage": "https://github.com/reducks/redux-universal",
  "dependencies": {
    "is-promise": "^2.1.0",
    "redux": "^3.0.0"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-core": "^5.8.25",
    "babel-eslint": "^4.1.3",
    "babel-loader": "^5.3.2",
    "chai": "^3.3.0",
    "chai-as-promised": "^5.1.0",
    "eslint": "^1.5.1",
    "eslint-config-airbnb": "^0.1.0",
    "flow-bin": "^0.16.0",
    "isparta": "^3.1.0",
    "istanbul": "^0.3.21",
    "jscs": "^2.2.1",
    "mocha": "^2.3.3",
    "rimraf": "^2.4.3",
    "sinon": "^1.17.1",
    "sinon-chai": "^2.8.0",
    "webpack": "^1.12.2"
  }
}
